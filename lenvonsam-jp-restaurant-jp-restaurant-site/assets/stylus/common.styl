.pc-fix-appoint-btn
  width 100px
  height 100px
  position fixed
  z-index 100
  top 40%
  right 10%
  background-image: url('../assets/imgs/pc_fix_appoint_btn.png')
  background-position: center
  background-size: cover
  transition: scale 150ms linear
  &.small
    opacity 0.85
    transform: scale(0.9)
  &:hover
    cursor pointer
.mb-fix-appoint-btn
  width 100px
  height 100px
  position fixed
  z-index 100
  top 45%
  right -70px
  background-image: url('../assets/imgs/mb_fix_appoint_btn.png')
  background-position: center
  background-size: cover
  transition: right 0.2s linear
  -moz-user-select: none
  -ms-user-select: none
  -webkit-user-select: none
  user-select none
  .container
    width 100px
    height 100px
    position relative
    .dot
      width: 12px
      height:24px
      position:relative
      top: 40px
      left:5px
      z-index -1
  // &:hover
    // cursor pointer
  &.full
    transition: scale 100ms linear
    .container
      .dot
        z-index 1
    &.small
      transform: scale(0.9)
      opacity 0.95
      background-image: url('../assets/imgs/mb_fix_appoint_small_btn.png')
    right 10px
    background-image: url('../assets/imgs/mb_fix_appoint_close_btn.png')